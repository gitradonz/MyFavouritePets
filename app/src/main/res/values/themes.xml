<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal de la app. -->
    <style name="Theme.MyFavouritePets" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Colores secundarios. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color de la barra de status. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyFavouritePets.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyFavouritePets.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyFavouritePets.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tema del Splash-->
    <style name="SplashTheme" parent="Theme.MyFavouritePets">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>